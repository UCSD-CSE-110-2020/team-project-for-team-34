<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/parent_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="route_name"
        android:id="@+id/route_name"
        android:textSize="30sp"
        android:textColor="#000"
        android:paddingLeft="15dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="2000/01/01"
        android:layout_below="@+id/route_name"
        android:id="@+id/route_date"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Miles: 000.0"
        android:layout_below="@+id/route_name"
        android:layout_toRightOf="@+id/route_date"
        android:id="@+id/route_mile"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Steps: 000000"
        android:layout_below="@+id/route_name"
        android:layout_toRightOf="@+id/route_mile"
        android:id="@+id/route_step"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        ></TextView>
</RelativeLayout>